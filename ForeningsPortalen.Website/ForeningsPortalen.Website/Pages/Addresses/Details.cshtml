@page
@model ForeningsPortalen.Website.Pages.Addresses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Address</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <input type="hidden" name="RowVersion" value="Address.RowVersion" />
            <input type="hidden" name="Id" value="Address.Id" />

            @Html.DisplayNameFor(model => model.Address.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.StreetNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.StreetNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.CurrentMember)
        </dt>
        <dd class="col-sm-10">
            <button id="MemberDetails" asp-page="/Members/Details" asp-route-id="@Model.Address.CurrentMember"> Se beboer detaljer </button>
        </dd>
    </dl>

    <div>
        <a asp-page="./Edit" asp-route-id="Address.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
