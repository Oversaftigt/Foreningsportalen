@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    @if (!_signInManager.IsSignedIn(User))
    {
        <h1 class="display-4">Velkommen til Bolig Portalen </h1>
        @*     <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
        <hr/>
        <form id="MemberLogin" method="post">
            <div class="Jumbotron">
                <h4>Du er ikke logget ind endnu</h4>
                <p>For at komme til siden, log da venligst ind</p>
                <a type="submit" class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login </a>
            </div>
        </form>
    }
    else
    {
        <h3 class="display-4">Velkommen tilbage @User.Identity.Name</h3>
        <div class="Jumbotron">
            <div class=" card-body"></div>
        @if(User.HasClaim("UnionRole", "Administrator"))
       {
            <a class="btn btn-primary" asp-area="" asp-page="/Admin/Unions/ChooseUnion">Tilgå en Portal </a>
       }
        </div>

    }

</div>