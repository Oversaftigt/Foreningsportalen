@page
@model RegisterMemberModel

@using ForeningsPortalen.Website.DTOs.Member
@using ForeningsPortalen.Website.DTOs.Union

@{
    ViewData["Title"] = "Registrer nyt foreningsmedlem";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="container">
    <div class="row">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row">
                <div class="col-md-6">
                    <section>
                        <h2>Login oplysninger</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                        @*     <span asp-validation-for="Input.Email" class="text-danger"></span> *@
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                         @*    <span asp-validation-for="Input.Password" class="text-danger"></span> *@
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    @*         <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                        </div>
                    </section>
                </div>
                <div class="col-md-6 mb-5">
                    <h2>Medlems oplysninger</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-2">
                        <div class="input-group date" id="datepicker" style="display: flex; align-items: center;">
                            <div class="form-floating mb-2" style="padding-right: 15px;">
                                <input asp-for="memberCreateRequest.MoveInDate" class="form-control" asp-format="{0:yyyy-MM-dd}" autocomplete="off" aria-required="true" placeholder="Dato for Indflyning" />
                                <label asp-for="memberCreateRequest.MoveInDate" class="form-label">Dato for Indflytning</label>
                            </div>
                            <div class="input-group-append d-flex">
                                <i class="fa fa-calendar fa-lg"></i>
                            </div>
                        </div>
                 @*        <span asp-validation-for="memberCreateRequest.MoveInDate" class="text-danger"></span> *@
                    </div>
                    <div class="form-floating mb-2">
                        <input id="memberEmail" asp-for="memberCreateRequest.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="memberCreateRequest.Email">Email</label>
                 @*        <span asp-validation-for="memberCreateRequest.Email" class="text-danger"></span> *@
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="memberCreateRequest.FirstName" class="form-control" autocomplete="Fornavn" aria-required="true" placeholder="Fornavn" />
                        <label asp-for="memberCreateRequest.FirstName">Fornavn</label>
                @*         <span asp-validation-for="memberCreateRequest.FirstName" class="text-danger"></span> *@
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="memberCreateRequest.LastName" class="form-control" autocomplete="Efternavn" aria-required="true" placeholder="Efternavn" />
                        <label asp-for="memberCreateRequest.LastName">Efternavn</label>
                      @*   <span asp-validation-for="memberCreateRequest.LastName" class="text-danger"></span> *@
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="memberCreateRequest.PhoneNumber" class="form-control" autocomplete="Telefon nr." aria-required="true" placeholder="Telefon nr." />
                        <label asp-for="memberCreateRequest.PhoneNumber">Telefon Nr.</label>
                     @*    <span asp-validation-for="memberCreateRequest.PhoneNumber" class="text-danger"></span> *@
                    </div>
                </div>
             <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary d-block mx-auto mb-3">Gem medlem</button>
            </div>
         </form>
        <div class="form-floating mb-2">
            <select asp-for="memberCreateRequest.AddressId" class="form-select">
                <select asp-for="memberCreateRequest.AddressId" class="form-select" id="addressesDropdown">
                    <option value="">Select an address</option>
                </select>
            </select>
       @*      <span asp-validation-for="memberCreateRequest.AddressId" class="text-danger"></span> *@
        </div>
    </div>
</div>

